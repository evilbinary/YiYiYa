import os

Import('env')


source = []
source += Glob('src/*.c')


include = [
    'src',
    'include',
    '.',
    '../include/c',
    '../include'
]

env.Library('lua', source,
            CPPPATH=env.get('CPPPATH')+include,
            CFLAGS='$CFLAGS $LIBCFLAGS')
